<%- include ('partials/header'); %>

      <div class="container">
          <form action="/api/exercise/add" method="post" class="d-flex justify-content-center">
            <div class="form-group">
            <h3>Add exercises</h3>
            <p><code>POST /api/exercise/add</code></p>
            <input id="user_query" class="form-control" type="text" name="username" placeholder="username" value="<%= message ? message[1] == 'danger' ? message[2].username : '' : ''%>" required>
            <input id="from" class="form-control" type="text" name="description" placeholder="description" value="<%= message ? message[1] == 'danger' ? message[2].description : '' : ''%>" required>
            <input id="dur" class="form-control" type="text" name="duration" placeholder="duration (min)" value="<%= message ? message[1] == 'danger' ? message[2].duration : '' : ''%>" required>
            <input id="date" class="form-control" type="text" name="date" placeholder="date (yyyy-mm-dd)" value="<%= message ? message[1] == 'danger' ? message[2].date : '' : ''%>">
            <input type="submit" value="Submit">
            </div>
            </form>
      </div>
  <% if (message) { %>
  <div class="container alert alert-<%= message[1] %>">
        <p class="text-center"><%= message[0] %></p>
  </div>
  <% } %>
<%- include ('partials/footer'); %>
